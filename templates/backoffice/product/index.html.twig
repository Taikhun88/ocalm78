{% extends 'layout.html.twig' %}

{% block title %}
	{{parent()}}
	- Liste des produits
{% endblock %}

{% block content %}
	<h1 class="mb-3">Liste des produits</h1>

	<a class="btn btn-outline-success btn-sm" href="{{ path('app_backoffice_product_new') }}">
		<i class="fas fa-hamburger light opacity-75 fa-lg"></i>
		<i class="fas fa-plus light opacity-75 fa-xs"></i>
	</a>

	<table class="table">
		<thead>
			<tr>
				<th>Image</th>
				<th>Nom</th>
				<th>Prix</th>
				<th>Points</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for product in products %}
				<tr>
					<td><img class="img-fluid img-product" src="{{ asset('images/products/' ~ product.imageUpfront) }}" alt="">
                    </td>
					<td>{{ product.name }}</td>
					<td>{{ product.price }}â‚¬</td>
					<td>{{ product.points }}</td>
					{# <td>
						{% if product.promo is null %}
							0
						{% endif %}
						{{ product.promo }}
						%
                    </td> #}
					<td>
						<a class="btn btn-warning btn-sm inline-block my-1" href="{{ path('app_backoffice_product_show', {'id': product.id}) }}">
							<i class="far fa-eye"></i>
						</a>
						<a class="btn btn-primary btn-sm inline-block my-1" href="{{ path('app_backoffice_product_edit', {'id': product.id}) }}">
							<i class="far fa-edit"></i>
						</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="16">Aucun produit existant actuellement</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
