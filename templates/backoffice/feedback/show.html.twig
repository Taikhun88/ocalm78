{% extends 'layout.html.twig' %}

{% block title %}{{parent()}} - Détails du feedback
{% endblock %}

{% block content %}
	<h1>Détails du feedback</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ feedback.id }}</td>
			</tr>
			<tr>
				<th>Auteur</th>
				<td>{{ feedback.user.pseudo }}</td>
			</tr>
			<tr>
				<th>Message</th>
				<td>{{ feedback.message }}</td>
			</tr>
			<tr>
				<th>Note</th>
				<td>{{ feedback.rating }}</td>
			</tr>
			<tr>
				<th>Status</th>
				<td>{{ feedback.status ? 'Validé' : 'Non-validé' }}</td>
			</tr>
			<tr>
				<th>Date de création</th>
				<td>{{ feedback.createdAt ? feedback.createdAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>
	<a class="btn btn-primary btn-sm inline-block mb-2" href="{{ path('app_backoffice_feedback_edit', {'id': feedback.id}) }}">
		<i class="far fa-edit"></i>
	</a>

	{{ include('backoffice/feedback/_delete_form.html.twig') }}

	<a class="text-light" href="{{ path('app_backoffice_feedback_index') }}">
		<i class="fas fa-reply-all"></i>
	</a>
{% endblock %}
