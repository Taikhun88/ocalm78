{% extends 'layout.html.twig' %}

{% block title %}
	{{parent()}}
	- Détails de l'avatar
{% endblock %}

{% block content %}
	<h1>Détails de l'avatar</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ avatar.id }}</td>
			</tr>
			<tr>
				<th>Avatar</th>
				<td><img class="img-fluid img-product" src="{{ asset('images/avatars/' ~ avatar.imagePath) }}" alt=""></td>
			</tr>
			<tr>
				<th>Nom</th>
				<td>{{ avatar.name }}</td>
			</tr>
			<tr>
				<th>Catégorie</th>
				<td>{{ avatar.category.name }}</td>
			</tr>
		</tbody>
	</table>
	<a class="btn btn-primary btn-sm inline-block mb-2" href="{{ path('app_backoffice_avatar_edit', {'id': avatar.id}) }}">
		<i class="far fa-edit"></i>
	</a>

	{{ include('backoffice/avatar/_delete_form.html.twig') }}

	<a class="text-light" href="{{ path('app_backoffice_avatar_index') }}">
		<i class="fas fa-reply-all"></i>
	</a>
{% endblock %}
