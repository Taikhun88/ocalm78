{% extends 'layout.html.twig' %}

{% block title %}
	{{parent()}}
	- Vue détaillée de la ville
{% endblock %}

{% block content %}
	<h1>Vue détaillée de la ville</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ city.id }}</td>
			</tr>
			<tr>
				<th>Code postal</th>
				<td>{{ city.zipCode }}</td>
			</tr>
			<tr>
				<th>Nom de la ville</th>
				<td>{{ city.cityName }}</td>
			</tr>
		</tbody>
	</table>

	<a class="btn btn-primary btn-sm inline-block mb-2" href="{{ path('app_backoffice_city_edit', {'id': city.id}) }}">
		<i class="far fa-edit"></i>
	</a>

	{{ include('backoffice/city/_delete_form.html.twig') }}

	<a class="text-light" href="{{ path('app_backoffice_city_index') }}">
		<i class="fas fa-reply-all"></i>

	{% endblock %}
