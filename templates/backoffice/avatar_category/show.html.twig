{% extends 'layout.html.twig' %}

{% block title %}
	{{parent()}}
	- Détails de la catégorie d'avatars
{% endblock %}

{% block content %}
	<h1>Détails de la catégorie d'avatars</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ avatar_category.id }}</td>
			</tr>
			<tr>
				<th>Nom</th>
				<td>{{ avatar_category.name }}</td>
			</tr>
		</tbody>
	</table>
	<a class="btn btn-primary btn-sm inline-block mb-2" href="{{ path('app_backoffice_avatar_category_edit', {'id': avatar_category.id}) }}">
		<i class="far fa-edit"></i>
	</a>

	{{ include('backoffice/avatar_category/_delete_form.html.twig') }}

	<a class="text-light" href="{{ path('app_backoffice_avatar_category_index') }}">
		<i class="fas fa-reply-all"></i>
	</a>
{% endblock %}
