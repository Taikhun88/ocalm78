{% extends 'layout.html.twig' %}

{% block title %}
	{{ parent()}}
	- Vue détaillée des catégories de produits
{% endblock %}

{% block content %}
	<h1>Vue détaillée des catégories de produits</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ product_category.id }}</td>
			</tr>
			<tr>
				<th>Nom</th>
				<td>{{ product_category.name }}</td>
			</tr>
			<tr>
				<th>Points</th>
				<td>{{ product_category.points }}</td>
			</tr>
		</tbody>
	</table>

	<a class="btn btn-primary btn-sm inline-block mb-2" href="{{ path('app_backoffice_product_category_edit', {'id': product_category.id}) }}">
		<i class="far fa-edit"></i>
	</a>

	{{ include('backoffice/product_category/_delete_form.html.twig') }}

	<a class="text-light" href="{{ path('app_backoffice_product_category_index') }}">
		<i class="fas fa-reply-all"></i>
	{% endblock %}
